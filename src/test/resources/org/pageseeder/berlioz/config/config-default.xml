<?xml version="1.0"?>
<global>

  <berlioz>
    <errors handle="true" generator-catch="false"/>
    <http compression="true" get-via-post="true" max-age="45"/>
    <xml parse-strict="true" header.version="1.0"/>
    <xslt cache="true"/>
    <cssbundler minimize="true" location="/style/_/">
      <configs default="global,service"/>
      <bundles global="/style/lib/foundation-datepicker.min.css,/style/lib/chosen-1.4.2.min.css,/style/global.css"
              service="/script/{GROUP}/{SERVICE}.css"/>
    </cssbundler>

    <jsbundler minimize="true" location="/script/_/">
      <configs default="global,group,service"/>
      <bundles global="/script/lib/foundation-datepicker.js,/script/lib/chart-1.0.1-beta4.min.js,/script/lib/jquery.tablesorter-2.0.5.min.js,/script/global.js"
                group="/script/{GROUP}.js"
              service="/script/{GROUP}/{SERVICE}.js"/>
    </jsbundler>
  </berlioz>

  <test>
    <boolean true="true" false="false" invalid="coconut" invalid-true="True" invalid-false="FALSE" invalid-yes="yes" invalid-no="no" empty=""/>
    <int valid="123" toolarge="129999999999999999999999" invalid="not_an_int" empty=""/>
    <string sample="hello" empty=""/>
  </test>

</global>